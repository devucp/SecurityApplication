<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:datePickerDialogTheme">@color/colorPrimary</item>

    </style>
    <style name="sos" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#8AFFFFFF</item>
        <item name="android:textCursorDrawable">@color/white</item>  // Cursor
        <item name="android:textColorHighlight">#0052F8</item>
    </style>

    <style name="pass" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textColorHint">#8AFFFFFF</item>
        <item name="android:textCursorDrawable">@drawable/ed_cus</item>  // Cursor
        <item name="android:textColorHighlight">#0052F8</item>
    </style>
    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff2222</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/cyan</item>
    </style>


    <!-- Base application theme. -->

</resources>
